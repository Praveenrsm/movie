@model movieentity1.MovieEL
@*@{
    ViewData["Title"] = "DeleteMovie";
}*@
<div>
    <hr />
    <a asp-controller="Movie" asp-action="Index">
        Movie entry
    </a><hr />
</div>
<h1>Delete Movie</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <div class=" =form-group">
        <label>Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter movie id" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
</form>
@if (ViewBag.status == "Ok")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>
}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}