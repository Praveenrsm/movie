@model movieentity1.MovieEL
@{
    ViewData["Title"] = "EditMovie";
}
<div>
    <hr />
    <a asp-controller="Movie" asp-action="Index">
        Movie entry
    </a><hr />
</div>
<h1>EditMovie</h1>
<hr/>
<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2><hr />
    <div class=" =form-group">
        <label>Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter movie id" required/>
    </div>
    <div class=" =form-group">
        <label>Movie Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="enter movie name" required/>
    </div>
    <div class=" =form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="enter movie type" required/>
    </div>
    <div class=" =form-group">
        <label>Movie Description</label>
        <input type="text" asp-for="MovieDesc" class="form-control" placeholder="enter movie desc" required/>
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary"/>
    <hr />
</form>
@if (ViewBag.status == "Ok")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>

}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}
