@model movieentity1.Theatre
@{
    ViewData["Title"] = "EditTheatre";
}

<h1>EditTheatre</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <h2>Theatre Entry</h2><hr />
    <div class=" =form-group">
        <label>Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter theatre id" required />
    </div>
    <div class=" =form-group">
        <label>address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="enter theatre address" required />
    </div>
    <div class=" =form-group">
        <label>theatre name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="enter theatre name" required />
    </div>
    <div class=" =form-group">
        <label>comments</label>
        <input type="text" asp-for="Comments" class="form-control" placeholder="enter theatre reviews" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
</form>
@if (ViewBag.status == "Ok")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>

}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}
