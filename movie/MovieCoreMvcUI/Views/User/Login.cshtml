@model movieentity1.UserInfo;
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Login</h2>
<hr />
<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="text" class="form-control" asp-for="Password">
    </div>
    <input type="submit" class="btn btn-primary" value="Login">
    <button type="button" class="btn btn-secondary clearfix">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <hr />
    <a asp-controller="User" asp-action="Register">Register</a>
</form>
