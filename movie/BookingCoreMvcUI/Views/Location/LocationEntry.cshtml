
@model movieentity1.Location;
<div>
    <hr />
    <a asp-controller="Location" asp-action="Index">
        Index
    </a><hr/>
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Location Entry</h2><hr />
    <div class=" =form-group">
        <label>Location!</label>
        <input type="text" asp-for="location" class="form-control" placeholder="enter location" required />
    </div>
    <div class=" =form-group">
        <label>booking id</label>
        <input type="text" asp-for="BookingId" class="form-control" placeholder="enter booking id" required />
    </div>
@*    <div class=" =form-group">
        <label>User id</label>
        <input type="text" asp-for="UserId" class="form-control" placeholder="enter user id" required />
    </div>*@
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
</form>
@if (ViewBag.status == "Ok")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>
}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}