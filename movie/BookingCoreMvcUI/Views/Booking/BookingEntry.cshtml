
@{
    ViewData["Title"] = "BookingEntry";
}
@model movieentity1.Booking;
<div>
    <hr />
    <a asp-controller="Booking" asp-action="Index">
        Index
    </a><hr />

</div>
<form method="post" enctype="multipart/form-data">
    <h2>Booking Entry</h2><hr />
    <div class=" =form-group">
        <label>movie Name</label>
        <input type="text" asp-for="MovieName" class="form-control" placeholder="enter movie name" required />
    </div>
    <div class=" =form-group">
        <label>price</label>
        <input type="text" asp-for="price" class="form-control" placeholder="enter price" required />
    </div>
    <div class=" =form-group">
        <label>Timing</label>
        <input type="text" asp-for="Timing" class="form-control" placeholder="enter movie timing" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
</form>
@if (ViewBag.status == "Ok")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>

}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}

