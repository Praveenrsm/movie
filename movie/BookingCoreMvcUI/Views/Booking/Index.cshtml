@model IEnumerable<movieentity1.Booking>
@{
    ViewData["Title"] = "Index";
}
<div>
    <hr />
    <a asp-controller="Booking" asp-action="BookingEntry">
        Booking entry
    </a><hr />
</div>
<div class=" row">
    <div class="col-12">
        <h3>Booking</h3>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie id</th>
                    <th>Name</th>
                    <th>price</th>
                    <th>Movie Timing</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.MovieName</td>
                        <td>@movie.price</td>
                        <td>@movie.Timing</td>
                        <td>
                            <a asp-controller="Booking" asp-action="EditBooking"
                           asp-route-Id="@movie.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Booking" asp-action="DeleteBooking"
                           asp-route-Id="@movie.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
